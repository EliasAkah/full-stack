extends layout/main-layout.pug

block style
    link(rel='stylesheet', href='/css/main.css')

block content
    main
        //outputing the following details if products.length is > 0
        if products.length > 0
            .grid
                //creating a loop to ensure that all the products are shown to the user interface with their various product title and other details
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A Book")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart
        else
            h1.product__title My Products
                p List of all the products...



